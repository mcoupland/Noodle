<Application x:Class="Noodle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Noodle"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Noodle;component/Themes/Generic.xaml"/>
                <ResourceDictionary>
                    <FontFamily x:Key="Montserrat-Light">pack://application:,,,/Fonts/#Montserrat Light</FontFamily>
                    <FontFamily x:Key="Montserrat-Regular">pack://application:,,,/Fonts/#Montserrat</FontFamily>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
